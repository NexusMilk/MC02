<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:background="@drawable/planner_bg"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!-- Header with CheckBox and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Planner Status CheckBox -->
        <CheckBox
            android:id="@+id/cb_planner_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <!-- Planner Title Text -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Content TextView with additional spacing -->
    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- Planner Time TextView with additional spacing -->
    <TextView
        android:id="@+id/plannerTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:text="Reminder Time: 12:00 PM" />

    <!-- Deadline Date TextView with additional spacing -->
    <TextView
        android:id="@+id/deadlineDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:text="Deadline Date: DD/MM/YYYY" />

    <!-- Delete Button with additional space at the bottom -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/light_blue"
        android:text="Delete"
        android:textSize="16sp" />

</LinearLayout>
